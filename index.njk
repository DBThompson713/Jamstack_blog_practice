---
layout: layouts/base.njk
pagination:
  data: colections.posts
  size: 5
  alias: posts
---
{# Collections:<pre>{{collections.post | dump}}</pre> #}
{% for post in posts%}
<div class="post-preview">
  <a href="{{post.url | url}}">
    <h2 class="post-title">
       {{post.data.title}}}}
    </h2>
    <h3 class="post-subtitle">
       {{post.data.description}}}}
    </h3>
  </a>
  <p class = "post-meta"> Posted by<span>{{post.data.author}}</span>
</div>
<hr>
{% endfor %}


